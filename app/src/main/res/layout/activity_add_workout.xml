<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back7"
    tools:context=".AddWorkoutActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_add_workout_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/toolBar_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_training"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="218dp" />
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/TrainingName"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <androidx.cardview.widget.CardView
        android:id="@+id/CV"
        android:layout_width="375dp"
        android:layout_height="500dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp">
                <com.vivekkaushik.datepicker.DatePickerTimeline
                    android:id="@+id/datePickerTimeline"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent" />
             </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text="@string/sets"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    tools:ignore="RtlHardcoded" />
                <Button
                    android:id="@+id/btn_set_minus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_minus" />
                <EditText
                    android:id="@+id/SetNum"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxWidth="60dp"
                    android:maxHeight="50dp"
                    android:maxLength="2"
                    android:minWidth="60dp"
                    android:text="@string/_0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-5dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/cardview_light_background"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="@string/x"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_set_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_plus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/weight"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
                <Button
                    android:id="@+id/btn_weight_minus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_minus" />
                <EditText
                    android:id="@+id/weightNum"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxWidth="60dp"
                    android:maxHeight="50dp"
                    android:maxLength="2"
                    android:minWidth="60dp"
                    android:text="@string/_0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-10dp"
                    android:layout_marginEnd="21dp"
                    android:background="@color/cardview_light_background"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="@string/kg"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_weight_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_plus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_break"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:text="@string/Break"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    tools:ignore="RtlHardcoded" />
                <Button
                    android:id="@+id/btn_break_minus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_minus" />
                <EditText
                    android:id="@+id/breakNum"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxWidth="60dp"
                    android:maxHeight="50dp"
                    android:maxLength="2"
                    android:minWidth="60dp"
                    android:text="@string/_0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-10dp"
                    android:layout_marginEnd="14dp"
                    android:background="@color/cardview_light_background"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="@string/min"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_break_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_plus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_repeat"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:text="@string/repeat"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    tools:ignore="RtlHardcoded" />
                <Button
                    android:id="@+id/btn_repeat_minus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_minus" />
                <EditText
                    android:id="@+id/repeatNum"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxWidth="60dp"
                    android:maxHeight="50dp"
                    android:maxLength="2"
                    android:minWidth="60dp"
                    android:text="@string/_0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-6dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/cardview_light_background"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="@string/x"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_repeat_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_plus" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/save_btn"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_save_shape"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:text="@string/save" />
        <Button
            android:id="@+id/btnBackNewWorkout"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:layout_constraintVertical_bias="1.0"
            android:background="@drawable/shape"
            android:text="@string/BtnBackNew" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>