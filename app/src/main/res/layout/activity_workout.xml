<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:gravity="center"
    tools:context=".workout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar_workout_activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/toolBar_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="218dp" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/shapetransparent_message"
                    android:gravity="center"
                    android:text="@string/workout_choice1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btn_gym_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.39" />

                <Button
                    android:id="@+id/btn_gym_home"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/ic_gym_out"
                    android:text="@string/gymwork1"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintBottom_toTopOf="@+id/button5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.454"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.931" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/imageedit_5_6040594024"
                    android:text="@string/homeworkout1"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.669" />

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/shape"
                    android:text="@string/back1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button5"
                    app:layout_constraintVertical_bias="0.315" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>