<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecurityActivity"
    android:background="@drawable/ic_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_security_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/toolBar_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="218dp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:gravity="center_horizontal"
            android:text="Change Security Info"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.084" />

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="400dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editps0"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:textColorHint="#8D8D8E"
                    app:boxStrokeColor="#0287FB"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="48dp"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/CurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/current_password"
                        tools:ignore="DuplicateIds" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ed"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:textColorHint="#8D8D8E"
                    app:boxStrokeColor="#0287FB"
                    tools:layout_editor_absoluteX="50dp"
                    tools:layout_editor_absoluteY="220dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTextPasswordAgain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Repeat password"
                        tools:ignore="DuplicateIds" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editps3"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:textColorHint="#8D8D8E"
                    app:boxStrokeColor="#0287FB"
                    app:layout_goneMarginBottom="10dp"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="309dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTextEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:hint="Change Email"
                        app:layout_goneMarginBottom="10dp"
                        tools:ignore="DuplicateIds" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editps"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:textColorHint="#8D8D8E"
                    app:boxStrokeColor="#0287FB"
                    tools:layout_editor_absoluteX="50dp"
                    tools:layout_editor_absoluteY="132dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="New Password"
                        tools:ignore="DuplicateIds" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="116dp"
            android:backgroundTint="#E303FFA6"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.585"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnback"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:backgroundTint="#D1FF0038"
            android:text="back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSave" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>